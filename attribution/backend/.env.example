# UnMoGrowP Attribution Platform - Backend Environment Variables

# Server
PORT=8080
ENV=development

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=unmogrowp

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=analytics

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_EVENTS=attribution.events
KAFKA_TOPIC_CONVERSIONS=attribution.conversions
KAFKA_GROUP_ID=unmogrowp-backend

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Performance
MAX_WORKERS=10
BATCH_SIZE=1000
FLUSH_INTERVAL_MS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

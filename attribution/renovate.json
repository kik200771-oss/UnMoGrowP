{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "timezone": "Europe/Moscow",
  "labels": ["dependencies", "renovate"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Group all frontend dependencies",
      "matchPaths": ["frontend/**"],
      "groupName": "frontend dependencies",
      "labels": ["frontend"]
    },
    {
      "description": "Group all API dependencies",
      "matchPaths": ["api/**"],
      "groupName": "api dependencies",
      "labels": ["api"]
    },
    {
      "description": "Group all backend dependencies",
      "matchPaths": ["backend/**"],
      "groupName": "backend dependencies",
      "labels": ["backend", "go"]
    },
    {
      "description": "Group Docker dependencies",
      "matchManagers": ["docker-compose"],
      "groupName": "docker dependencies",
      "labels": ["docker"]
    },
    {
      "description": "Pin GitHub Actions to exact versions",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    },
    {
      "description": "Separate major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"],
      "groupName": "major dependencies"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true,
    "schedule": ["at any time"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "ignorePresets": [":prHourlyLimit2"],
  "ignoreDeps": [
    "react",
    "react-dom",
    "next"
  ]
}
